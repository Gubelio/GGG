political_decisions = {

    remove_serfs = {
        alert = no
        potential = {
			ai = no
			civilized = yes
			any_owned_province = {
				has_pop_type = serfs
			}
			NOT = {
					debt_law = serfdom
			}
        }

        allow = {

        }

        effect = {
			any_owned = {
				has_pop_type = serfs
				OR = {
					has_pop_type = farmers
					has_pop_type = labourers
				}
				serfs = { pop_type = farmers }
			}
        }
    }
	
    remove_thralls = {
        alert = no
        potential = {
			ai = no
			civilized = yes
			any_owned_province = {
				has_pop_type = thralls
			}
			NOT = {
				thralldom = thralldom_allowed
			}
        }

        allow = {

        }

        effect = {
			any_owned = {
				has_pop_type = thralls
				OR = {
					has_pop_type = farmers
					has_pop_type = labourers
				}
				thralls = { pop_type = farmers }
			}
        }
    }

	enslave_the_thralls = {
        alert = no
        potential = {
			ai = no
			NOT = { has_country_flag = enslaved_the_thralls }
			#OR = {
			#	ruling_party_ideology = statist
			#	ruling_party_ideology = absolutist
			#}
			civilized = yes
			any_owned_province = {
				has_pop_type = thralls
			}
			NOT = {
				OR = {
					thralldom = thralldom_outlawed
					slavery = gradual_abolition
					slavery = no_slavery				
				}
			}
        }

        allow = {

        }

        effect = {
			any_owned = {
				has_pop_type = thralls
				thralls = { pop_type = slaves }
			}
			any_pop = {
				limit = { 
					type = farmers
					location = { is_colonial = no }
					is_accepted_culture = yes
				}
				militancy = 4
				consciousness = 2
			}
			political_reform = thralldom_outlawed
			set_country_flag = enslaved_the_thralls
        }
    }



